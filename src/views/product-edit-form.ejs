<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Editando: ' + '¿?'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
		<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Estás editando:<%=product.name%></h2>
			</div>
		</div>
		
		<div class="col-12">
			<form action="/products/edit/<%=product.id%>?_method=PUT" method="POST">
				<div class="row product-detail">
					<div class="col-12 col-md-6">
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name" placeholder="" class="form-input"value= <%=product.name%>>
					</div>
					<div class="col-12 col-md-6">
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="price" name="price" placeholder="zapatilla" class="form-input" value= <%=product.price%> >
					</div>
					<div class="col-12 col-md-6">
						<label for="discount" class="form-label">Descuento:</label>
						<input type="text" id="discount" name="discount" placeholder="" class="form-input" value= <%=product.discount%>>
					</div>
					<div class="col-12 col-md-6">
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="" disabled>Elegí</option>
						<% if (product.category == 'in-sale'){ %>
							<option value="in-sale"selected >En oferta</option>
							<option value="visited" >Últimos agregados</option>
						<%} else { %>
								<option value="in-sale">En oferta</option>
								<option value="visited" selected >Últimos agregados</option>
						<% } %>
						</select>
					</div>
					<div class="col-12">
						<label for="description" class="form-label">Descipción:</label>
						<textarea name="description" id="description" class="form-input"><%=product.description%></textarea>
					</div>
					<div class="col-12">
						<button type="submit" value="enviar" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
		
	</div>
	<!-- /todos los productos -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>